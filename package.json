{
  "name": "color-peek",
  "version": "0.5.1-alpha",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "author": "manav",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "size-limit": [
    {
      "path": "dist/color-peek.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/color-peek.esm.js",
      "limit": "10 KB"
    }
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "prettier:write": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "test": "npx jest --clearCache && yarn jest",
    "lint": "yarn prettier:write && yarn tsdx lint src",
    "size": "size-limit",
    "build": "yarn prettier:write && yarn tsdx build && yarn size",
    "start-storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook": "yarn build-storybook && yarn start-storybook",
    "pre-publish": "yarn test && yarn lint && yarn build"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@chromatic-com/storybook": "^3.1.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@storybook/addon-essentials": "^8.6.17",
    "@storybook/addon-interactions": "^8.6.17",
    "@storybook/addon-links": "^8.6.17",
    "@storybook/addon-onboarding": "^8.6.17",
    "@storybook/blocks": "^8.6.17",
    "@storybook/react": "^8.6.17",
    "@storybook/react-vite": "^8.6.17",
    "@storybook/test": "^8.6.17",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "size-limit": "^11.1.6",
    "storybook": "^8.6.17",
    "ts-jest": "^29.2.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^4.0.0"
  }
}
